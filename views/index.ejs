<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="style.css" rel="stylesheet">
    <title>Index</title>
</head>
<body>

<%- include('header') -%>

<% if (locals.flash && locals.flash.error) { %>
    <p class="alert-error"><%= locals.flash.error %></p>
<% } %>

<% if (locals.flash && locals.flash.success) { %>
    <p class="alert-success"><%= locals.flash.success %></p>
<% } %>


<h1>Bienvenue sur l'index</h1>

<section class="stories">

<% for (let story of stories) { %>
    <article class="story">
        <h2><%= story.title %></h2>
        <p><%= story.content %></p>
        <p>Publi√© par: <%= story.author %></p>
        <p>Le: <%= story.publishTime.toLocaleDateString() %></p>
    </article>
<% } %>
</section>


<%- include('footer') -%>

</body>
</html>